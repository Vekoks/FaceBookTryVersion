    <div id="NoSeenMessage"></div>

    <script src="~/Scripts/ScriptForChat.js"></script>
    <script src="~/Scripts/ScriptForUserInfo.js"></script>
    <script src="~/Scripts/ScriptForAskFriend.js"></script>
    <script src="~/Scripts/ScriptAllPostInfo.js"></script>

    <script>

        $(function () {

            // Proxy created on the fly
            var job = $.connection.noSeenMessageHub;

            // Declare a function on the job hub so the server can invoke it
            job.client.displayAllNoSeenMessage = function () {
                getDataForAllNoSeenMessage();
            };

            // Start the connection
            $.connection.hub.start();
            getDataForAllNoSeenMessage();
        });


        function getDataForAllNoSeenMessage() {
            var $tbl = $('#NoSeenMessage');

            $.ajax({
                url: 'GetAllNoSeenMessage',
                type: 'GET',
                datatype: 'json',
                success: function (data) {
                    if (data.length > 0) {
                        $tbl.empty();
                        var rows = [];
                        rows.push(' <h3>Messages: </h3>');

                        for (var i = 0; i < data.length; i++) {
                            rows.push(' <div>');
                            rows.push('  <p>' + data[i].FormUser + ': ' + data[i].Message + '</p>');
                            rows.push(' </div>');
                        }

                        $tbl.append(rows.join(''));
                    }
                }
            });
        }
    </script>
    
</body>
