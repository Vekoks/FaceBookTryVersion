@{
    ViewBag.Title = "Home Page";
}

@model FaceBookClient.Models.HomeIndexViewModel

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div>
    <p>Invitations from Friend: @Model.CountAskForFriend</p>
    @foreach (var ask in Model.AllAskForFriend)
            {
        <div>
            <p>@ask.Username</p>
            <p>@Html.ActionLink("Accept invitation", "ConferFriend/"+ask.Username + "/accept", "Home", new { @class = "btn btn-info" })</p>
            <p>@Html.ActionLink("Detele invitation", "ConferFriend/" + ask.Username + "/delete", "Home", new { @class = "btn btn-info" })</p>
        </div>


    }
</div>



<div class="row">
    <div>
        <input type="text" id="room" value="Room" />
        <button id="join-room">Join</button>
        <br />
        <input type="text" id="message" value="message" />
        <button id="send-message">Send</button>
        <br />
        <input type="text" id="room-message" value="message" />
        <button id="send-message-to-room">Send To Rooms Only</button>
    </div>



    <div class="dropdown">
        <button onclick="myFunction()" class="dropbtn">Users</button>
        <div id="myDropdown" class="dropdown-content">
            @foreach (var user in Model.AllUsers)
            {
                <p>
                    @Html.ActionLink(@user.UserName, "Details/" + user.UserName.ToString(), "DetaialUser")
                    @if (user.IsOnline)
                    {
                        <div style="border: 5px solid red;"></div>
                    }
                </p>
            }
        </div>
    </div>
</div>